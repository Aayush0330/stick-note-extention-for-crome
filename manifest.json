{
    "manifest_version": 3,
    "name": "Sticky Notes",
    "version": "1.0",
    "description": "Create and manage sticky notes in your browser.",
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html" 
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  